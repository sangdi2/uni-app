.my-cont {
  width: 100%;
  height: 180px;
  background-color: #bf2238;
  display: flex;
  justify-content: center;
  align-items: center;
}
.my-cont .top-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.my-cont .top-box image {
  width: 90px;
  height: 90px;
  border: 1px solid white;
  box-shadow: 0 2px 2px black;
  border-radius: 45px;
}
.my-cont .top-box .top-text {
  color: white;
  font-size: 13px;
  margin-top: 5px;
}
.panel-list {
  padding: 0 10px;
  position: relative;
  top: -10px;
  left: 0;
}
.panel-list .panel1 {
  background-color: #ffffff;
  border-radius: 5px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10px;
}
.panel-list .panel1 .panel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  font-weight: 600;
}
.panel-list .panel1 .panel-item .text {
  font-size: 10px;
  margin-top: 5px;
}
.panel-list .panel1 .panel-item image {
  width: 30px;
  height: 30px;
}
.panel-list .panel2 {
  background-color: #ffffff;
  border-radius: 5px;
  margin: 10px 0;
}
.panel-list .panel2 .panel-title {
  font-size: 13px;
  padding: 10px;
  border-bottom: 1px solid #efefef;
}
.panel-list .panel3 {
  background-color: #ffffff;
  border-radius: 5px;
  margin: 10px 0;
}
.panel-list .panel3 .panel3-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  font-size: 13px;
}