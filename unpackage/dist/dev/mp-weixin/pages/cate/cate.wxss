.scroll {
  display: flex;
}
.scroll .left-scroll {
  width: 200rpx;
}
.scroll .left-scroll .left-scroll-item {
  height: 100rpx;
  background-color: #fff;
  text-align: center;
  font-size: 25rpx;
  line-height: 100rpx;
}
.scroll .left-scroll .active {
  background-color: #f3f3f3;
  position: relative;
}
.scroll .left-scroll .active::before {
  content: "";
  width: 6rpx;
  height: 60rpx;
  background-color: #c00000;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}
.scroll .right-scroll-title-item {
  text-align: center;
  font-size: 25rpx;
  font-weight: 800;
  margin: 20px 0;
}
.scroll .right-scroll-content {
  display: flex;
  flex-wrap: wrap;
}
.scroll .right-scroll-content .right-scroll-content-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.scroll .right-scroll-content .right-scroll-content-item image {
  width: 60px;
  height: 60px;
}
.scroll .right-scroll-content .right-scroll-content-item text {
  font-size: 28rpx;
}